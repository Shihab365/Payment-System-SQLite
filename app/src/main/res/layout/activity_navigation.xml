<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#310050"
        android:padding="2dp"
        android:weightSum="2"
        tools:context="com.sqlitepaysystem.bel.sqlite_paysystem.NavigationActivity">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="2"
                android:gravity="bottom"
        >
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginRight="4dp"
            >
                <android.support.v7.widget.CardView
                        android:id="@+id/card_recharge_id"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#dc293e83"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"

                >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/mobile_recharge"
                        />
                        <View
                                android:layout_width="130dp"
                                android:layout_height="2dp"
                                android:background="#ffffff"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Recharge"
                                android:textColor="#ffffff"
                                android:textStyle="bold|normal"
                                android:textSize="17sp"
                        />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="4dp"
            >
                <android.support.v7.widget.CardView
                        android:id="@+id/card_utility_id"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#d8ff7700"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"

                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/utility_icon"
                        />
                        <View
                                android:layout_width="118dp"
                                android:layout_height="2dp"
                                android:background="#ffffff"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Utility Payment"
                                android:textColor="#ffffff"
                                android:textStyle="bold|normal"
                                android:textSize="17sp"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:padding="4dp"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="top"
        >
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginRight="4dp"
            >
                <android.support.v7.widget.CardView
                        android:id="@+id/card_history_id"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#d8ff7700"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"

                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/hisory_icon"
                        />
                        <View
                                android:layout_width="128dp"
                                android:layout_height="2dp"
                                android:background="#ffffff"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment History"
                                android:textColor="#ffffff"
                                android:textStyle="bold|normal"
                                android:textSize="17sp"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="4dp"
            >
                <android.support.v7.widget.CardView
                        android:id="@+id/card_profile_id"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardBackgroundColor="#dc293e83"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="5dp"
                        android:clickable="true"

                >
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                    >
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/profile_icon"
                        />
                        <View
                                android:layout_width="92dp"
                                android:layout_height="2dp"
                                android:background="#ffffff"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                        />
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Profile"
                                android:textColor="#ffffff"
                                android:textStyle="bold|normal"
                                android:textSize="17sp"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>
