<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:background="#310050"
        android:padding="11dp"
        tools:context="com.sqlitepaysystem.bel.sqlite_paysystem.RechargeActivity">

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="3dp"
        >
            <android.support.v7.widget.CardView
                    android:id="@+id/card_gp_id"
                    android:layout_weight="1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_marginRight="4dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                >
                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/grameenphone_icon"
                    />
                    <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Grameenphone"
                            android:textColor="#000000"
                            android:textStyle="bold|normal"
                            android:textSize="17sp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                    android:id="@+id/card_robi_id"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardBackgroundColor="#ffffff"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="5dp"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                >
                    <ImageView
                            android:layout_gravity="center"
                            android:layout_width="130dp"
                            android:layout_height="75dp"
                            android:src="@drawable/robi_icon"
                    />
                    <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Robi"
                            android:textColor="#000000"
                            android:textStyle="bold|normal"
                            android:textSize="17sp"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:padding="3dp"
    >
        <android.support.v7.widget.CardView
                android:id="@+id/card_airtel_id"
                android:layout_weight="1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginRight="4dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
            >
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/airtel_icon"
                />
                <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airtel"
                        android:textColor="#000000"
                        android:textStyle="bold|normal"
                        android:textSize="17sp"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_bang_id"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
            >
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="75dp"
                        android:src="@drawable/banglalink_icon"
                />
                <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banglalink"
                        android:textColor="#000000"
                        android:textStyle="bold|normal"
                        android:textSize="17sp"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="2"
    >
        <android.support.v7.widget.CardView
                android:id="@+id/card_tel_id"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
            >
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="75dp"
                        android:src="@drawable/teletalk_icon"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:id="@+id/card_skitto_id"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="5dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
            >
                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/skitto_icon"
                />
                <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Skitto"
                        android:textColor="#000000"
                        android:textStyle="bold|normal"
                        android:textSize="17sp"
                />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
